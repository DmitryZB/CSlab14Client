<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSlab13.DetailPage" Title="Информация о детали">
    <StackLayout Padding="15">
        <Label Text="Название детали" />
        <Entry x:Name="EntryNameDetail"
               x:FieldModifier="public"
            Text="{Binding Name}" 
            Placeholder="Введите название" 
            PlaceholderColor="LightGray"/>
        <Label Text="Доступное количество" />
        <Entry 
            Text="{Binding QuantityInStock}" 
            Keyboard="Numeric" 
            Placeholder="Введите количество" 
            PlaceholderColor="LightGray"/>
        
        <StackLayout Orientation="Horizontal">
            <Frame BackgroundColor="#c7c5c5" 
                   Margin="0,10,0,0" 
                   Padding="10, 5, 10,5"
                   CornerRadius="10">
                <Button Text="Сохранить" Clicked="SaveDetail" TextColor="DimGray" FontSize="15"/>
            </Frame>
            <Frame BackgroundColor="#c7c5c5" 
                   Margin="15,10,0,0" 
                   Padding="10, 5, 10,5"
                   CornerRadius="10">
                <Button Text="Удалить" Clicked="DeleteDetail" TextColor="DimGray" FontSize="15"/>
            </Frame>
        </StackLayout>
    </StackLayout>
</ContentPage>
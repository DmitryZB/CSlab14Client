<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSlab13.PartPage" Title="Информация о части">
    <StackLayout Padding="15">
        <Label Text="Название используемой детали" />
        <Entry x:Name="Entry"
               Text="{Binding Detail.Name}"
               Placeholder="Введите название" 
            PlaceholderColor="LightGray"/>
        <Label Text="Необходимое количество" />
        <Entry 
            Text="{Binding Quantity}" 
            Keyboard="Numeric" 
            Placeholder="Введите количество" 
            PlaceholderColor="LightGray"/>
        <StackLayout Orientation="Horizontal">
            <Frame BackgroundColor="#c7c5c5" 
                   Margin="0,10,0,0" 
                   Padding="10, 5, 10,5"
                   CornerRadius="10">
                <Button Text="Сохранить" Clicked="SavePart" TextColor="DimGray" FontSize="15"/>
            </Frame>
            <Frame BackgroundColor="#c7c5c5" 
                   Margin="15,10,0,0" 
                   Padding="10, 5, 10,5"
                   CornerRadius="10">
                <Button Text="Удалить" Clicked="DeletePart" TextColor="DimGray" FontSize="15"/>
            </Frame>
        </StackLayout>
    </StackLayout>
</ContentPage>